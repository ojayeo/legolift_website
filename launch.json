{
    
    "version": "0.2.0",

   
    "configurations": [

        {
            /**
             * The name of the launch configuration.
             * This will be displayed in the VS Code debugger dropdown.
             * @example "Python Debugger: Current File"
             */
            "name": "Python Debugger: Current File",

            /**
             * The type of debugger to use.
       
             * @example "debugpy"
             */
            "type": "debugpy",

           
             
            "request": "launch",

        
            "program": "${file}",

            "console": "integratedTerminal"
        },

        {
       
            "preLaunchTask": "npm: start"
        },

        {
    
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "https://legolift.com",
            "webRoot": "${workspaceFolder}"
        }
    ]
}